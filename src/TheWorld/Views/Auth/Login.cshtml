@model TheWorld.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout_Index.cshtml";
}
@section scripts {
    <script src="~/lib/jquery-validate/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
<div class="row">
    <div class="welcome">
        <h1 class="text-center">Welcome!</h1>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="text-info" id="username">
                <h2 class="text-center">@User.Identity.Name</h2>
            </div>


            <form method="post" novalidate>
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <input asp-for="Username" class="form-control" value="@User.Identity.Name" style="display:none"/>
                </div>
                <div class="form-group">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Enter Password"/>
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <div class="btn-group btn-group-justified">
                        <div class="btn-group">
                            <a asp-controller="App" asp-action="Index" class="btn btn-default btn-responsive">Cancel</a>
                        </div>
                        <div class="btn-group">
                            <input type="submit" value="Login" class="btn btn-success btn-responsive" />
                        </div>
                    </div>
                </div>
            </form>

        }
        else
        {

            <form method="post" novalidate>
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <div class="btn-group btn-group-justified">
                        <div class="btn-group">
                            <a asp-controller="App" asp-action="Index" class="btn btn-default btn-responsive">Cancel</a>
                        </div>
                        <div class="btn-group">
                            <a asp-controller="Auth" asp-action="Register" class="btn btn-default btn-responsive">Register</a>
                        </div>
                        <div class="btn-group">
                            <input type="submit" value="Login" class="btn btn-success btn-responsive" />
                        </div>
                    </div>
                </div>
            </form>

        }
    </div>
</div>